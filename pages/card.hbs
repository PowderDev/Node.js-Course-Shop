<h1>Корзина</h1>

<div id='card'>
    {{#if courses.length}}
    <table class="highlight">
        <thead>
            <tr>
                <th>Название</th>
                <th>Количество</th>
                <th>Цена</th>
                <th>Удалить</th>
            </tr>
        </thead>

        <tbody>
            {{#each courses}}
            <tr>
                <td>{{courseId.title}}</td>
                <td>{{count}}</td>
                <td class="price min">{{courseId.price}}</td>
                <td>
                    <button class="btn btn-small js-remove" data-csrf='{{@root.csrf}}'
                        data-id="{{courseId._id}}">Удалить</button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <p><strong>Цена:</strong> <span class="price medium pr">{{price}}</span></p>

    <form action="/orders" method="POST">
        <input type="hidden" name="_csrf" value="{{csrf}}">
        <button type="submit" class="btn green"> Сделать заказ </button>
    </form>
    {{else}}
    <p>Корзина пуста</p>
    {{/if}}
</div>