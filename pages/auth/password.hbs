<div class="row">
    <div class="col s6 offset-s3">
        {{#if error}}
        <p class="alert">{{error}}</p>
        {{/if}}

        <h3>Задать новый пароль</h3>
        <form action="/auth/password" method="POST" style='margin-bottom: 1.3rem'>
            <div class="input-field">
                <input name='password' id="password" type="text" class="validate">
                <label for="password">Password</label>
                <span class="helper-text" data-error="Введите password" data-success="right"></span>
            </div>

            <input type="hidden" name="_csrf" value="{{csrf}}">
            <input type="hidden" name="userId" value="{{userId}}">
            <input type="hidden" name="token" value="{{token}}">

            <button class='btn btn-primary' type="submit">Сбросить</button>
        </form>

    </div>

</div>