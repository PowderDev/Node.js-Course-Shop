<h1>Мои Заказы</h1>

{{#if orders.length}}
<div class="row">
    {{#each orders}}
    <div class="col s6">
        <div class="card">
            <div class="card-content">
                <span class="card-title">
                    Заказ <small>{{_id}}</small>
                </span>

                <ol>
                    {{#each courses}}
                    <li>
                        {{course.title}} (x <strong>{{count}}</strong>)
                    </li>
                    {{/each}}
                </ol>
                <p><em>{{user.name}}</em> ({{user.userId.email}}) </p>
                <small class="date">{{date}}</small>

                <hr>

                <p>Цена: <span class="price medium">{{price}}</span></p>
            </div>
        </div>
    </div>
    {{/each}}
</div>

{{else}}
<p>Заказов пока нет</p>
{{/if}}